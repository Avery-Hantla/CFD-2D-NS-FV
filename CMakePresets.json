{
    "version": 8,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "GCC 14.2.0 x86_64-pc-linux-gnu",
            "description": "Using compilers: C = /kuhpc/sw/gcc/14.2/bin/gcc, CXX = /kuhpc/sw/gcc/14.2/bin/g++",
            "binaryDir": "${sourceDir}/build/",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "/kuhpc/sw/gcc/14.2/bin/gcc",
                "CMAKE_CXX_COMPILER": "/kuhpc/sw/gcc/14.2/bin/g++",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}